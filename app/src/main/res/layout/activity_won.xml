<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#0D2AC8"
    android:layout_height="match_parent"
    tools:context=".WonActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#222436"
        android:layout_height="@dimen/_42sdp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/chevron_left_circle_svgrepo_com"
            android:backgroundTint="@color/white"/>
        <TextView
            android:id="@+id/txtExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:textSize="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"/>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            app:cpb_background_progressbar_color="#C45A4C"
            app:cpb_background_progressbar_width="@dimen/_12sdp"
            app:cpb_progress_direction="to_right"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_60sdp"
            app:cpb_progress_max="47"
            app:cpb_progress="34"
            app:cpb_progressbar_color="@color/green"
            app:cpb_progressbar_width="13dp"
            app:cpb_round_border="false" >
        </com.mikhaellopez.circularprogressbar.CircularProgressBar>
        <TextView
         android:id="@+id/txtResult1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/20"
            android:textStyle="bold"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"
         android:layout_gravity="center"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/sharebtn"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_55sdp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="#36DAB9"

        >
        <TextView
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Share Your score">

        </TextView>
    </LinearLayout>



</LinearLayout>